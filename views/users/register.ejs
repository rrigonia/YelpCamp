<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-md-6 offset-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1504280390367-361c6d9f38f4?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTV8fGNhbXBncm91bmQlMjBwZXJmaWx8ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="" class="card-img-top img-thumbnail">
                <div class="card-body">
                    <h5 class="card-title text-center">Register</h5>
                    <form class="form-validated" action="/register" method="POST" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" placeholder="username"
                                autofocus required>
                            <div class="valid-feedback">
                                Looks Good
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">E-mail</label>
                            <input class="form-control" type="email" id="email" name="email" placeholder="email" required>
                            <div class="valid-feedback">
                                Looks Good
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" placeholder="password"
                                required>
                            <div class="valid-feedback">
                                Looks Good
                            </div>
                        </div>
        
                        <div class="d-grid gap-1">
                            <button class="btn btn-success">Register</button>
                        </div>
        
                    </form>
                </div>
            </div>
        </div>
    </div>