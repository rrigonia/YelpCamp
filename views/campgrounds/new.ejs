<% layout('layouts/boilerplate') %> 
<h1>New Campground</h1>
<form action="/campgrounds" method="POST">
    <label for="title">Title</label>
    <input type="text" name="campground[title]" id="title" placeholder="Campground Title">
    <br>
    <label for="location">Location</label>
    <input type="text" name="campground[location]" id="location" placeholder="City, State">
    <br>
    <label for="price">Price</label>
    <input type="number" name="campground[price]" id="price" placeholder="0">
    <br>
    <label for="description">Description</label>
    <textarea name="campground[description]" id="description" cols="30" rows="5"></textarea>
    <br>
    <label for="image">Image URL</label>
    <input type="text" name="campground[image]" id="image" placeholder="Image URL">
    <br>

    <button>Submit</button>
</form>

<br>
<a href="/campgrounds">All Campgrounds</a>