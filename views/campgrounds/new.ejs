<% layout('layouts/boilerplate') %> 

<div class="row">
    <div class="col-6 offset-3">
        <h1>New Campground</h1>

<form class="form-validated" action="/campgrounds" method="POST" novalidate>
    <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" name="campground[title]" id="title" placeholder="Campground Title" required>
        <div class="valid-feedback">
            Looks Good !
        </div>
    </div>
   
   <div class="mb-3">
    <label class="form-label" for="location">Location</label>
    <input class="form-control" type="text" name="campground[location]" id="location" placeholder="City, State" required>
    <div class="valid-feedback">
        Looks Good !
    </div>
   </div>
   
   <div class="mb-3">
    <label class="form-label" for="price">Price</label>
    <input class="form-control" type="number" name="campground[price]" id="price" placeholder="0" required>
    <div class="valid-feedback">
        Looks Good !
    </div>
   </div>

    <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" name="campground[description]" id="description" cols="30" rows="5" required></textarea>
        <div class="valid-feedback">
            Looks Good !
        </div>
    </div>
   
    <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
    <input class="form-control" type="text" name="campground[image]" id="image" placeholder="Image URL" required>
    <div class="valid-feedback">
        Looks Good !
    </div>
    </div>

    <button class="btn btn-success btn-lg">Submit</button>
</form>

<br>
<a href="/campgrounds">All Campgrounds</a>
</div>
</div>